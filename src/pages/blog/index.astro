---
import { getBlogs } from "@/libs/microcms";
import FormattedDate from "@/components/ui/FormattedDate.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "@/consts";

const response = await getBlogs({
  orders: "-publishedAt",
  depth: 2,
});
const { contents: blogs, limit, offset, totalCount } = response;
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <Fragment slot="head">
    <style>
      main {
        width: 960px;
      }
      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        width: calc(50% - 1rem);
      }
      ul li * {
        text-decoration: none;
        transition: 0.2s ease;
      }
      ul li:first-child {
        width: 100%;
        margin-bottom: 1rem;
        text-align: center;
      }
      ul li:first-child .title {
        font-size: 2.369rem;
      }
      ul li img {
        display: block;
        width: 100%;
        height: 200px;
        object-fit: cover;
        margin-bottom: 0.5rem;
        border-radius: 12px;
      }
      ul li a {
        display: block;
      }
      .title {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1;
      }
      .date {
        margin: 0;
        color: rgb(var(--gray));
      }
      ul li a:hover h4,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }
      ul a:hover img {
        box-shadow: var(--box-shadow);
      }
      .taxonomies {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 0.35em 0.5em;
        margin-top: 0.4em;
        font-size: 0.8em;
      }
      .category {
        color: rgb(var(--accent));
        font-weight: 500;
      }
      .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.25em;
        list-style: none;
        margin: 0;
        padding: 0;
      }
      .tags li span {
        display: inline-block;
        padding: 0.15em 0.45em;
        background: rgb(var(--gray-light));
        color: rgb(var(--gray-dark));
        border-radius: 4px;
        font-size: 0.9em;
      }
      ul li a:hover .category {
        color: var(--accent-dark);
      }
      ul li a:hover .tags li span {
        background: var(--accent);
        color: white;
      }
      @media (max-width: 720px) {
        ul {
          gap: 0.5em;
        }
        ul li {
          width: 100%;
          text-align: center;
        }
        ul li:first-child {
          margin-bottom: 0;
        }
        ul li:first-child .title {
          font-size: 1.563em;
        }
      }
    </style>
  </Fragment>
  <section>
    <ul>
      {
        blogs.map((blog) => (
          <li>
            <a href={`/blog/${blog.id}/`}>
              {blog.eyecatch?.url && (
                <img
                  src={blog.eyecatch.url}
                  alt=""
                  width={blog.eyecatch.width}
                  height={blog.eyecatch.height}
                  loading="lazy"
                />
              )}
              <h4 class="title">{blog.title}</h4>
              <p class="date">
                <FormattedDate
                  date={new Date(blog.publishedAt ?? blog.createdAt)}
                />
              </p>
              {(blog.category || (blog.tags && blog.tags.length > 0)) && (
                <div class="taxonomies">
                  {blog.category && (
                    <span class="category">{blog.category.name}</span>
                  )}
                  {blog.tags && blog.tags.length > 0 && (
                    <ul class="tags" aria-label="タグ">
                      {blog.tags.map((tag) => (
                        <li><span>{tag.name}</span></li>
                      ))}
                    </ul>
                  )}
                </div>
              )}
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</BaseLayout>
