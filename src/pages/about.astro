---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import iconImage from "@/assets/icon.jpg";
---

<BaseLayout title="About" description="About">
  <h1>About</h1>
  <div class="sm:flex items-end gap-4">
    <Image
      src={iconImage}
      class="icon-image"
      alt="いとじゅんのicon"
      width={1000}
      height={1000}
    />
    <ul>
      <li>Name: itojum / いとじゅん</li>
      <li>Job: Student</li>
      <li>Birthday: December 30th</li>
      <li>From: Tottori/Shimane, Japan</li>
    </ul>
  </div>

  <hr/>

  <div class="flex gap-4">
    <div class="w-1/2">
      <h2>Interests</h2>
      <ul class="list-disc list-inside">
        <li >Web開発</li>
        <li>AIエージェント</li>
        <li>技術系イベント</li>
      </ul>
    </div>
    <div class="w-1/2"> 
      <h2>Hobbies</h2>
      <ul class="list-disc list-inside">
        <li>VRChat</li>
        <li>Minecraft</li>
        <p class="text-gray-500 text-sm text-right">増やしたい...</p>
      </ul>
    </div>
  </div>

  <hr/>

</BaseLayout>
<style>
  .icon-image {
    object-fit: cover;
    object-position: center;
    border-radius: 9999px;
    box-shadow:
      0 4px 6px -1px rgb(0 0 0 / 0.1),
      0 2px 4px -2px rgb(0 0 0 / 0.1);
    width: 200px;
    height: 200px;
    max-width: 80vw;
    max-height: 80vw;
  }
</style>
