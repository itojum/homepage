---
interface Props {
  isFirst?: boolean;
}

const { isFirst = false } = Astro.props;
---

<span
  class={`activities-timeline__node ${isFirst ? "is-first" : ""}`}
  aria-hidden="true"
/>

<style is:global>
  .activities-timeline__node {
    @apply relative z-10 mt-1.5 flex h-6 w-6 shrink-0 items-center justify-center rounded-full border-2;
    border-color: rgb(var(--timeline-node-border));
    background-color: rgb(var(--timeline-node-bg));
    box-shadow: 0 0 0 4px rgb(var(--timeline-node-ring));
  }

  .activities-timeline__node.is-first {
    border-color: var(--main);
  }
</style>
