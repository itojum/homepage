---
import type { Eyecatch } from "@/types/blog";

interface Props {
	eyecatch?: Eyecatch;
}

const { eyecatch } = Astro.props;
---

{eyecatch?.url && (
  <div class="thumbnail">
    <img
      src={eyecatch.url}
      width={eyecatch.width}
      height={eyecatch.height}
      data-pagefind-meta="image[src]"
    />
  </div>
)}

<style>
  .thumbnail {
    margin-bottom: 1em;
    height: 280px;
    overflow: hidden;
    border-radius: 8px;
  }
  .thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
</style>

