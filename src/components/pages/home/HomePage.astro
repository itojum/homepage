---
import type { Blog } from "@/types/blog";
import HeroSection from "./HeroSection.astro";
import RecentBlogsSection from "./RecentBlogsSection.astro";
import LinksSection from "./LinksSection.astro";
import SpecialThanks from "./SpecialThanks.astro";
import "./HomePage.css";

interface LinkItem {
  service: string;
  url: string;
  icon: string | null;
  name: string;
}

interface Props {
  latestBlogs: Blog[];
  links: LinkItem[];
}

const { latestBlogs, links } = Astro.props;
---

<HeroSection />
<hr />
<RecentBlogsSection blogs={latestBlogs} />
<hr />
<LinksSection links={links} />
<hr />
<SpecialThanks />
