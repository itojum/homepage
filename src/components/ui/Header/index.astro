---
import Logo from "./Logo.astro";
import NavLinks from "./NavLinks.astro";
import Actions from "./Actions.astro";
import MobileNav from "./MobileNav.astro";
import Search from "../Search.astro";
---

<header>
  <nav>
    <Logo />
    <div class="header-content">
      <NavLinks />
      <Actions />
      <MobileNav />
    </div>
  </nav>
  <Search />
</header>
<style>
  header {
    @apply m-0 px-4;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    background-color: rgba(var(--surface-overlay), 92%);
    border-bottom: 1px solid rgba(var(--border), 80%);
    backdrop-filter: blur(12px);
    box-shadow: var(--header-shadow);
  }

  nav {
    @apply flex items-center justify-between py-2;
    position: relative;
  }

  h1 {
    @apply m-0 text-[1em];
  }

  h1 a,
  h1 a.active {
    @apply flex items-center gap-2 no-underline;
  }

  .header-content {
    @apply flex items-center gap-4 ml-auto;
  }
</style>
