---
import "@/styles/global.css";
import { SITE_TITLE } from "@/consts";
import SEO from "@/components/ui/SEO.astro";

interface Props {
	title?: string;
	description?: string;
	image?: string;
	path?: string;
	noIndex?: boolean;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site || Astro.url.origin);

const { title, description, image, path, noIndex } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" href="/favicon.ico" />
<link rel="sitemap" href="/sitemap-index.xml" />
<script is:inline>
  (() => {
    try {
      const savedTheme = localStorage.getItem("theme");
      const systemPrefersDark = window.matchMedia(
        "(prefers-color-scheme: dark)",
      ).matches;
      const theme =
        savedTheme === "dark" || savedTheme === "light"
          ? savedTheme
          : systemPrefersDark
            ? "dark"
            : "light";
      document.documentElement.classList.toggle("dark", theme === "dark");
    } catch {
      /* noop */
    }
  })();
</script>
<link
  rel="alternate"
  type="application/rss+xml"
  title={SITE_TITLE}
  href={new URL("rss.xml", Astro.site || Astro.url.origin)}
/>
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link
  rel="preload"
  href="/fonts/MPLUS1Code-VariableFont_wght.ttf"
  as="font"
  type="font/ttf"
  crossorigin
/>

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- SEO Meta Tags -->
<SEO
	title={title}
	description={description}
	ogImage={image}
	path={path}
	noIndex={noIndex}
/>
