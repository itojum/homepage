---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;
const base = import.meta.env.BASE_URL || "/";
const rawPathname = Astro.url.pathname;
const pathname =
  base !== "/" && rawPathname.startsWith(base)
    ? rawPathname.slice(base.length - 1)
    : rawPathname;
const subpath = pathname.match(/[^/]+/g);
const isActive = href === pathname || href === `/${subpath?.[0] || ""}`;
---

<a
  href={href}
  class:list={["header-link", className, { active: isActive }]}
  {...props}
>
  <slot />
</a>
<style>
  .header-link {
    @apply inline-block py-4 px-2 text-[rgb(var(--black))] border-b-4 border-transparent no-underline;
    user-select: none;
  }

  .header-link.active {
    @apply font-extrabold;
    border-bottom-color: var(--main);
  }
</style>
